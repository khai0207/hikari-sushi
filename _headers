# Cloudflare Pages Custom Headers

# All pages - Security & Performance headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block

# Root index - cache with revalidation for faster loads
/
  Cache-Control: public, max-age=0, must-revalidate

# HTML pages - cache with revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Admin pages - never cache (sensitive data)
/admin/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# JS files - cache with revalidation (versioned)
/js/*
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# CSS files - cache with revalidation
/css/*
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Images - long cache (rarely change)
/images/*
  Cache-Control: public, max-age=2592000, stale-while-revalidate=604800, immutable

# Fonts - immutable long cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# R2 Assets (uploaded images) - long cache
/assets/*
  Cache-Control: public, max-age=2592000, stale-while-revalidate=86400
