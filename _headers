# Cloudflare Pages Custom Headers

# All pages - Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Root index - always revalidate
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# HTML pages - no cache (always fresh)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# Admin pages - never cache
/admin/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

# JS files - revalidate each time
/js/*
  Cache-Control: no-cache, must-revalidate

# CSS files - revalidate each time  
/css/*
  Cache-Control: no-cache, must-revalidate

# Images - long cache for performance (1 year)
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - long cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# R2 Assets - long cache with revalidation
/assets/*
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400
